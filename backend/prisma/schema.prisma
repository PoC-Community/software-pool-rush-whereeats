// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  password String
  email String @unique
  createdAt DateTime @default(now())
  isRetailer Boolean @default(false)
  retailer Store?
}

model Store {
  id String @id @default(uuid())
  storeName String
  openingHours String
  localisation FoodCategory
  category String
  images String[]
  averagePrice Int
  menu String[]
  createdAt DateTime @default(now())
  owner User @relation(fields: [id], references: [id])
}

enum FoodCategory {
  BURGER
  TACOS
  PIZZA
  SUSHI
  CHINESE
}
